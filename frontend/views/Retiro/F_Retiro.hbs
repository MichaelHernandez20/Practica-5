<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Retiro de Efectivo</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body class="bg-light">
    <div class="container mt-5 justify-content-center">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Retiro de Efectivo</h4>
        </div>
        <div class="card-body">
          <p><strong>Cuenta:</strong> {{cuenta}}</p>
          <p><strong>Usuario:</strong> {{usuario}}</p>
          <form action="/retiro" method="post">
            {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            <div class="mb-3">
              <label for="monto" class="form-label">Monto a retirar:</label>
              <input
                type="number"
                class="form-control"
                step="any"
                id="monto"
                name="monto"
                placeholder="Ingrese un monto a desembolsar"
                required="required"
                value="{{monto}}"
              />
            </div>
            <div class="mb-3">
              <label for="modo" class="form-label">Tipo de Dispersi√≥n:</label>
              <select class="form-select" id="modo" name="modo" required="required">
                <option value="Modo_E">Retiro eficiente</option>
                <option value="Modo_1">Papeletas de 100 y 500</option>
                <option value="Modo_2">Papeletas de 200 y 1000</option>
              </select>
            </div>
            <input type="hidden" name="cuenta" value="{{cuenta}}" />
            <button type="submit" class="btn btn-success w-100">Retirar Efectivo</button>
          </form>
        </div>
      </div>
    </div>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html> 