<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body class="bg-light">

    <div class="container mt-5">
      <div class="card mx-auto shadow-sm" style="max-width: 400px;">
        <div class="card-header text-center bg-primary text-white">
          <h5 class="mb-0"> Cajero Autom√°tico</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush small">
            <li class="list-group-item d-flex justify-content-between">
              <span>Fecha:</span><span>{{fecha}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Hora:</span><span>{{hora}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Cuenta:</span><span>{{cuenta}}</span>
            </li>
            <li class="list-group-item border-top d-flex justify-content-between fw-bold">
              <span>Billetes de $1000:</span><span>{{desglose.[1000]}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between fw-bold">
              <span>Billetes de $500:</span><span>{{desglose.[500]}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between fw-bold">
              <span>Billetes de $200:</span><span>{{desglose.[200]}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between fw-bold">
              <span>Billetes de $100:</span><span>{{desglose.[100]}}</span>
            </li>
            <li class="list-group-item border-top d-flex justify-content-between text-success">
              <span>Total retirado:</span><span>${{total}}</span>
            </li>
          </ul>
          {{#if exito}}
          <div class="alert alert-success mt-2">{{exito}}</div>
          {{/if}}
          {{#if error}}
          <div class="alert alert-danger mt-2">{{error}}</div>
          {{/if}}
          <div class="d-flex justify-content-end">
            <button
              class="btn btn-outline-success"
              onclick="reiniciar()"
            >Realizar un nuevo retiro</button>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>